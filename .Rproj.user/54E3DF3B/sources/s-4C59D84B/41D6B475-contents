infotech_taller <- majors_taller %>%
  filter(Field.of.study == "Information Technology")

p <- ggplot(infotech_taller, aes(x = Year, y = Students, fill = Major))
p <- p + facet_wrap(~Major, ncol = 6)
p <- p + geom_bar(stat = "identity")
p <- p + labs(title = "Domestic student enrolments in NZ",
              subtitle = "Information Technology Majors")
p <- p + theme(legend.position = "none",
               axis.text.x = element_text(angle = 90))

ggsave("infotech_enrolments.png", width = 32, height = 16, units = "cm")